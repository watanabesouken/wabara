<!-- /snippets/social-sharing.liquid -->

<ul class="socialShareComponent">
  <li>
    <a class="shareItem" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" rel="noopener noreferrer">
      {% render 'icon' with 'facebook' %}
    </a>
  </li>
  <li>
    <a class="shareItem" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" rel="noopener noreferrer">
      {% render 'icon' with 'twitter' %}
    </a>
  </li>
  <li>
    <a class="shareItem" target="_blank" href="http://line.me/R/msg/text/?{{ shop.url | append: share_permalink }}" rel="noopener noreferrer">
      {% render 'icon' with 'line' %}
    </a>
  </li>
  <li>
    <a class="shareItem" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" rel="noopener noreferrer">
      {% render 'icon' with 'pinterest' %}
    </a>
  </li>
  <li>
    <a href="javascript:location.href='mailto:?Subject={{ share_title | url_param_escape }}&body=' + document.URL;void(0);">{% render 'icon' with 'mail' %}</a>
  </li>

</ul>
