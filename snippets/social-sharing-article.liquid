<!-- /snippets/social-sharing-article.liquid -->

<ul class="socialShareComponent">
  <li>
    <a class="shareItem" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" rel="noopener noreferrer">
      {% render 'icon' with 'facebook' %}
    </a>
  </li>
  <li>
    <a class="shareItem" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" rel="noopener noreferrer">
      {% render 'icon' with 'twitter' %}
    </a>
  </li>
</ul>
